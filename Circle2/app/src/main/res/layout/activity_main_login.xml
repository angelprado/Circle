
.
    <?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miempresa.circle.MainLoginActivity"

    >

   <TextView

       android:layout_width="wrap_content"
       android:layout_height="90dp"
       android:text="Login Screen"
       android:textSize="29dp"
       android:layout_gravity="center"

       />
    <EditText
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Ingrese usuario"
        />
    <EditText
        android:id="@+id/contraseña"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Ingrese contraseña"

    />

    <CheckBox
    android:text="Remenber User"
    android:textSize="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkBox"
        android:textColor="#53565A"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="#add8ae"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/login"
        android:textSize="20sp"
        android:textColor="#53565A"

        android:layout_marginTop="5dp"


        />


          <Button

              android:layout_width="270dp"
              android:layout_height="50dp"
              android:text="Sing in with Facebook"
              android:layout_gravity="center"
              android:textAllCaps="false"
              android:textColor="@android:color/white"
              android:drawableLeft="@mipmap/ic_facebok"
              android:background="#3b5998"

              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              />

            <Button
             android:layout_width="270dp"
             android:layout_height="50dp"
             android:text="Sing in with Twitter"
             android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@mipmap/ic_twiter"
                android:textColor="@android:color/white"
                android:background="#00aced"


             />


    <Button
        android:id="@+id/newusuario"
        android:text="Create New Account"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#53565A"
        android:textStyle="italic"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#00FF4081"


        />

    <Button
        android:id="@+id/recordao"
        android:text="Forgot Password"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#53565A"
        android:textStyle="italic"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="#00FF4081"/>
    <!-- //style="@style/Widget.AppCompat.Button.Borderless"// -->




</LinearLayout>
